{
	"manifest_version": 3,
	"name": "WebXR Webcam Emulator",
	"version": "1.0.0",
	"description": "Emulate WebXR head and hand tracking using MediaPipe and a webcam",
	"permissions": [
		"storage",
		"scripting"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "icons/icon16.png",
			"48": "icons/icon48.png",
			"128": "icons/icon128.png"
		}
	},
	"background": {
		"service_worker": "background.js"
	},
	"web_accessible_resources": [
		{
			"resources": ["polyfill.js"],
			"matches": ["<all_urls>"]
		}
	]
}
